---
interface Props {
  region: string;
  queryDuration: number;
  d1Duration: number;
  isPrimary: boolean;
}

const { region, queryDuration, isPrimary, d1Duration } = Astro.props;
---

<div class="text-sm text-gray-600 p-2 bg-gray-100 rounded-md inline-block">
  <span
    class="font-medium"
    title="The geographic location of the database server">DB Region:</span
  >
  <span title="Region code where this database instance is hosted"
    >{region}</span
  > |
  <span
    class="font-medium"
    title="Indicates whether this is a primary database or a read replica"
    >Type:</span
  >
  <span
    class={isPrimary ? "text-blue-600" : "text-green-600"}
    title={isPrimary
      ? "Primary database handles both read and write operations"
      : "Read replica handles only read operations"}
  >
    {isPrimary ? "Primary" : "Replica"}
  </span> |
  <span class="font-medium" title="Time taken to execute the database query"
    >Query Time:</span
  >
  <span title="Duration of the database query execution in milliseconds"
    >{queryDuration.toFixed(2)}ms</span
  > |
  <span class="font-medium" title="Total time spent in Cloudflare D1 operations"
    >DB Duration:</span
  >
  <span
    title="Total time taken by D1 operations including connection and query execution"
    >{d1Duration.toFixed(2)}ms</span
  >
</div>
