---
import { Database, Server, Globe, Shield } from "lucide-react";

const features = [
  {
    icon: Server,
    title: "Zero-Lag Replication",
    description:
      "Real-time synchronization with minimal latency across all database instances.",
  },
  {
    icon: Globe,
    title: "Global Distribution",
    description:
      "Deploy read replicas anywhere in the world with automatic geographic optimization.",
  },
  {
    icon: Shield,
    title: "Automated Failover",
    description:
      "Instant failover protection with automatic recovery and zero data loss.",
  },
];
---

<div id="features" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">
      Why Choose ReplicateDB?
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        features.map((feature) => (
          <div class="p-6 bg-gray-50 rounded-lg">
            <feature.icon class="h-8 w-8 text-blue-600 mb-4" />
            <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</div>
